{
  "version": 2,
  "builds": [
    {
      "src": "public/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/live-data.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/portfolio.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/trading-bot.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/cron/trading-scheduler.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/live-data",
      "dest": "/api/live-data.py"
    },
    {
      "src": "/api/portfolio",
      "dest": "/api/portfolio.py"
    },
    {
      "src": "/api/trading-bot",
      "dest": "/api/trading-bot.py"
    },
    {
      "src": "/api/cron/trading-scheduler",
      "dest": "/api/cron/trading-scheduler.py"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ]
}
