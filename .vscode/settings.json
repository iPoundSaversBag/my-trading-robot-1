{
  "github.gitAuthentication": true,
  "github.gitProtocol": "https",
  "git.autofetch": true,
  "git.fetchOnPull": true,
  "github-actions.workflows.pinned.refreshInterval": 30,
  "github-actions.workflows.pinned.repositories": [
    "iPoundSaversBag/my-trading-robot-1"
  ],
  "github-actions.workflows.pinned.workflows": [
    ".github/workflows/bidirectional-sync.yml",
    ".github/workflows/trading-bot.yml",
    ".github/workflows/deploy.yml"
  ],
  "github.enableExperimentalApi": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true
  },
  // Reduce Problems panel noise: exclude virtual environment from analysis/linting
  "python.analysis.exclude": ["**/venv/**"],
  "python.linting.ignorePatterns": ["**/venv/**", "**/.git/**", "**/__pycache__/**"],
  "python.linting.flake8Args": ["--exclude=venv,.git,__pycache__"],
  "python.formatting.provider": "autopep8"
}